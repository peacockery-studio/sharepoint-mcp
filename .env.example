# SharePoint MCP Server Configuration
# Copy this file to .env and fill in your values

# Azure AD App Registration
SHAREPOINT_CLIENT_ID=your-azure-app-client-id
SHAREPOINT_CLIENT_SECRET=your-azure-app-client-secret-value
SHAREPOINT_TENANT_ID=your-azure-tenant-id

# SharePoint Site Configuration
SHAREPOINT_SITE_URL=https://your-tenant.sharepoint.com/sites/your-site
SHAREPOINT_DOC_LIBRARY=Shared Documents

# Optional: Pre-configured IDs (skip auto-discovery)
# SHAREPOINT_SITE_ID=your-site-id
# SHAREPOINT_DRIVE_ID=your-drive-id

# Test mode (uses mock data instead of real API)
USE_TEST_MODE=false
