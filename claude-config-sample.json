{
	"mcpServers": {
		"sharepoint-assistant": {
			"command": "node",
			"args": ["/path/to/sharepoint-mcp/index.js"],
			"env": {
				"USE_TEST_MODE": "false",
				"SHAREPOINT_CLIENT_ID": "your-azure-app-client-id",
				"SHAREPOINT_CLIENT_SECRET": "your-azure-app-client-secret-value",
				"SHAREPOINT_TENANT_ID": "your-azure-tenant-id",
				"SHAREPOINT_SITE_URL": "https://your-tenant.sharepoint.com/sites/your-site",
				"SHAREPOINT_DOC_LIBRARY": "Shared Documents"
			}
		}
	}
}
